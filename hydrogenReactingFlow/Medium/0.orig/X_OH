FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      X_OH;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

#include "include/initialConditions"

dimensions      [0 0 0 0 0 0 0];

internalField   uniform $X_OH;

boundaryField
{
    inlet
    {
        type            fixedValue;
        value           uniform $X_OH;
    }
    
    outlet
    {
        type            zeroGradient;
    }
    
    walls
    {
        type            zeroGradient;
    }
    
    #include "include/boundaries"
}


