FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    location    "0";
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

#include "include/initialConditions"

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform ($U 0 0);

boundaryField
{
    "inlet.*"
    {
        type            fixedValue;
        value           uniform ($U 0 0);
    }
    
    "outlet.*"
    {
        type            inletOutlet;
        inletValue      uniform (0 0 0);
        value           uniform (0 0 0);
    }
    
    "wall.*"
    {
        type            noSlip;
    }
    
    #include "include/boundaries"
}

